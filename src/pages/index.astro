---
import Layout from "../layouts/Layout.astro";
import Navegation from "../components/Navegation.astro";
import Card from "../components/Card.astro";
---

<Layout title="Integradora">
  <Navegation />
  <main>
    <!--  -->
    <section class="mb-[8rem]">
      <div
        style="background-image: ur('../../public/bg2.jpg'));"
        class="div_bg p-0 relative overflow-hidden flex items-center bg-cover pt-0 pb-0"
      >
        <span
          class="bg-black absolute w-full h-full top-0 left-0 bg-cover bg-center opacity-[.8]"
