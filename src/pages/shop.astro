---
import Layout from "../layouts/Layout.astro";
import Navegation from "../components/Navegation.astro";
import Footer from "../components/Footer.astro";
import Check from "../components/Check.astro";
import Tarjeta from "../components/Tarjeta.astro";
---

<Layout title="Carrito">
  <Navegation
    text={"Nada"}
    text4={"Carrito"}
    text3={"Ver producto"}
    text2={"Dashboard"}
  />
  <div class="mt-12 pr-6 pl-6 mr-auto ml-auto">
    <div class="mt-12 pr-6 pl-6 mr-auto ml-auto">
      <h1 class="mb-4 text-center font-bold text-4xl text-[#13293b]">
        Carrito de compra
      </h1>
      <h5 class="text-center mb-12 font-semibold text-xl text-[#13293b]">
        Tienes posibilidad de envio gratis
      </h5>
      <div class="flex flex-wrap mt-0 mr-4 ml-4 justify-center items-center">
        <div class="pb-4 shadow-lg rounded-md border-[#1e293b] mb-4">
          <div class="block">
            <img
              src="/suit-1.jpg"
              alt="suit"
              class="rounded-xl w-[156.59px] h-[261.17]"
            />
            <div>
              <h6 class="text-lg mb- text-justify">Saco basico</h6>
              <div class="flex">
                <p class="pr-4 mb-0 text-base font-semibold">8 Colores</p>
                <p class="pl-4 mb-0 border-start">pequena</p>
              </div>
              <div class="mt-16 items-center flex">
                <Check />
                <p class="text-sm ml-2 mb-0">En stock</p>
              </div>
              <div class="mt-6 w-1/5">
                <input
                  type="number"
                  name=""
                  id=""
                  aria-label="amount"
                  class="m-0 input-raro"
                  placeholder="1"
                  min="0"
                />
              </div>
              <h4 class="ml-4 font-semibold">$ 1,200.00</h4>
              <div class="text-end w-[10%]">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="#f00"
                  class="bi bi-x-lg"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
                  ></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
        <!--  -->
        <hr />
        <div class="pb-4 block shadow-lg rounded-md border-[#1e293b] mb-4">
          <div class="">
            <img
              src="/suit-1.jpg"
              alt="suit"
              class="rounded-xl w-[156.59px] h-[261.17]"
            />
            <div>
              <h6 class="text-lg mb- text-justify">Saco basico</h6>
              <div class="flex">
                <p class="pr-4 mb-0 text-base font-semibold">8 Colores</p>
                <p class="pl-4 mb-0 border-start">pequena</p>
              </div>
              <div class="mt-16 items-center flex">
                <Check />
                <p class="text-sm ml-2 mb-0">En stock</p>
              </div>
              <div class="mt-6 w-1/5">
                <input
                  type="number"
                  name=""
                  id=""
                  aria-label="amount"
                  class="m-0 input-raro"
                  placeholder="1"
                  min="0"
                />
              </div>
              <h4 class="ml-4 font-semibold">$ 1,200.00</h4>
              <div class="text-end w-[10%]">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="#f00"
                  class="bi bi-x-lg"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
                  ></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!--  -->
        <hr class="hr" />
        <div class="pb-4 shadow-lg rounded-md border-[#1e293b] mb-4">
          <div class="block">
            <img
              src="/suit-1.jpg"
              alt="suit"
              class="rounded-xl w-[156.59px] h-[261.17]"
            />
            <div>
              <h6 class="text-lg mb- text-justify">Saco basico</h6>
              <div class="flex">
